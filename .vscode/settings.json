{
  "editor.lineNumbers":"on",
  
  "editor.suggest.insertMode": "replace",
  "editor.tabSize": 2,
  "files.insertFinalNewline": true, // 文件的行尾插入一行
  
  // vscode 优化
  // "git.autorefresh": false,
  "git.enabled": true,
  "search.followSymlinks": false,
  "[nginx]": {
      "editor.defaultFormatter": "raynigon.nginx-formatter"
  },
  // "editor.fontSize": 24,

  // 去除vscode自带的格式检查
  // "typescript.validate.enable": false,
  // "javascript.validate.enable": false,
  
  
  // eslint   -----settings begin-----
  "editor.defaultFormatter": null, // 关闭自动格式化

  "editor.codeActionsOnSave": {
    // "source.organizeImports": true,//这个属性能够在保存时，自动调整 import 语句相关顺序，能够让你的 import 语句按照字母顺序进行排列，推荐设置为true,
    "source.fixAll.eslint": true,// 自动调用eslint的 --fix，在.elsint.js中配置好prettier规则
  },
  // "eslint.workingDirectories": [ "./client", "./server" ],
  "eslint.workingDirectories": ["."],
  "eslint.options": {
    "configFile": "lint/.eslintrc.js" ,
    "ignorePath":"lint/.eslintignore",
  },
  "eslint.nodePath": "lint/node_modules",

  "eslint.probe":[ // 应激活ESLint扩展名并尝试验证文件的语言标识符数组
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact",
      // "html",
      "vue",
      // "markdown"
  ],
  "eslint.run":"onSave",// 保存之后进行lint
  "eslint.debug": false ,// 是否启用eslint的调试模式
  // eslint   -----settings end-----

  "files.exclude": {
    "**/.git": false
  },
  "[css]": {
    
    "editor.hover.enabled": false ,
    "editor.suggest.insertMode": "replace"
  },
  
  // "typescript.tsdk": "./node_modules/typescript/lib",

}
   